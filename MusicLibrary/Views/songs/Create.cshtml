                @Html.ValidationMessageFor(model => model.album.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.track_number, "Track Number", htmlAttributes: new { @class = "control-label col-md-2" })
