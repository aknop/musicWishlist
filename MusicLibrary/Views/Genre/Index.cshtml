@model IEnumerable<MusicLibrary.Models.GenreViewModel>

@{
    ViewBag.Title = "Genres";
}

<h2>Genres</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Genre Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>

                @Html.ActionLink("Edit","Edit",new { id = item.GenreID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.GenreID }, new { @class = "btn btn-primary btn-danger" })
            </td>
        </tr>
    }
</table>

