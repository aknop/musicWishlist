@model IEnumerable<MusicLibrary.Models.AlbumViewModel>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th></th>
        <th>
            Album
        </th>
        <th>
            Artist
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div style="height: 100px; width: 100px;">
                    <a id="albumCover" href=""></a>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AlbumID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.AlbumID }, new { @class = "btn btn-primary btn-danger" })
            </td>
        </tr>
    }

</table>

<h3>Done adding albums? Add some <a href="~/Genre/Create" class="btn btn-primary btn-lg">Genres &raquo;</a></h3>
@section Scripts {
    @Scripts.Render("~/bundles/AlbumCover") 
    }