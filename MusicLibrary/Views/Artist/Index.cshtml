@model IEnumerable<MusicLibrary.Models.SongsViewModel>

@{
    ViewBag.Title = "Artists";
}

<h2>Artists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
                Artist
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SongID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.SongID }, new { @class = "btn btn-primary btn-danger" })
        </td>
    </tr>
}

</table>

<h3>Done adding artists? Add their <a href="~/Album/Create" class="btn btn-primary btn-lg">Albums &raquo;</a></h3>